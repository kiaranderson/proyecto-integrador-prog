<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />

	<title><%=title%></title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%- result.pp %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%- result.first_name %>
						<% if (logueado && userid == result.id) { %>
							<a href="/user/edit/<%=result.id%>">
							<i class="fas fa-cog"></i>
						</a>
					<% } %>
					</h1>
				</div>
				<div>
					<ul class="">
						<li> Usuario: <%- result.username %> </li>
						<li>Productos: <%- result.usuario.length %></li>
						<li>Comentarios: <%- result.owner.length %></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% result.usuario.forEach(producto => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%=producto.id%>">
							<figure class="product-box_image">
								<img class="product-image" src="<%= producto.image_url %>" alt="">
							</figure>
							<article class="product-box_data">
								<h2><%= producto.product_name %></h2>
								<p><%= producto.description %></p>
								<p>Comentarios: <%= producto.Comentarios.length %> </p>
							</article>
						</a>
					</section>
				</div>
				<% })%>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>

