<header class="main-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-5 col-md-2">
                <a href="/" class="main-header_home-link">
                    <img src="/images/logo2nite.png"
                    ">
                </a>
            </div>

            <div class="col-7 col-md-6">
                <form action="/search-results" method="GET" class="search-form">
                    <input type="text" name="search" placeholder="Buscar" class="search-form_input">
                    <button type="submit" class="search-form_button"><i class="fas fa-search"></i></button>
                </form>
            </div>

            <div class="col-12 col-md-4">
                <a class="main-header_credit-link">
                    <i class="fas fa-hand-holding-usd"></i>
                    Todas las opiniones en un solo lugar.
                </a>
            </div>
        </div>

        <button class="btn-toggle-navbar">
            <i class="fas fa-bars"></i>
        </button>

        <nav class="main-navbar">

            <% if(! logueado) { %>

                <ul class="left-navbar">
                    <li><button type="button" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">
                        <a href="/">Todos los productos</a>
                    </button>
                    </li>
                </ul>

                <ul class="right-navbar">
                    <li><button type="button" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off" >
                    <a href="/user/register">Creá tu cuenta </a>  
                    </button>
                    
                    </li>
                    <li>
                        <button type="button" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">
                        <a href="/user/login">Ingresá</a>
                        </button>
                    </li>
                </ul>

            <% } else { %>
                
                <ul class="left-navbar">
					<li> <button class="btn btn-primary"><a href="/">Todos los productos</a></button></li>
					<li><button class="btn btn-primary"><a href="/product/add">Cargar productos</a></button></li>
				</ul>
                <ul class="right-navbar">
					<li> <button class="btn btn-primary"><a href="/profile">
						<%- name %><i class="fas fa-user"></i>
					</a></button>
					</li>
					<li>
						<form action="" method="post">
							<button class="btn btn-primary" type="submit" >
								<a href="/">Cerrar sesión<i class="fas fa-sign-in-alt"></i></a> 
							</button>
						</form>
					</li>
				</ul>


            <% } %>

        </nav>
    </div>
</header>