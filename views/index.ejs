<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />

	<%- include('partials/title') %>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let product of novedades){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product">
						<figure class="product-box_image">
							<img src="/images/default-image.png" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%- product.name %></h2>
							<p><%- product.descripcion %></p>
							<p> Comentarios: <%- product.comentarios %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let product of comentados){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product">
						<figure class="product-box_image">
							<img src="/images/default-image.png" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%- product.name %></h2>
							<p><%- product.descripcion %></p>
							<p>Comentarios: <%- product.comentarios%></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
	<!-- /Más comentados -->


	<!-- footer -->
		<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>